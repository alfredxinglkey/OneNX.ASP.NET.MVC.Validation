@model List<OneNX.ASP.NET.MVC.Validation.Models.FileModel>

@{
    ViewBag.Title = "Home Page";
}

@section Scripts{
    @Scripts.Render("~/bundles/dataTables")
    @Scripts.Render("~/bundles/common")
}

<h1>字体图标</h1>
<i class="fa fa-camera-retro" style="font-size:60px;color:red;"></i>

<h1>常规表单</h1>
<form id="normal-form">
    <div class="form-group">
        <label>邮箱</label>
        <div class="form-inline">
            <input type="text" class="form-control" name="email-normal-form" />
            @*<span class="glyphicon glyphicon-ok form-control-feedback"></span>*@
        </div>
    </div>
    <div class="form-group">
        <label>密码</label>
        <input type="text" class="form-control" name="pwd-normal-form" />
    </div>
    <button type="submit" class="btn btn-primary">提交</button>
    <button type="reset" class="btn btn-warning">重置</button>
</form>

<h1>内联表单</h1>
<form class="form-inline" id="inner-form">
    <div class="form-group">
        <label>邮箱</label>
        <input type="text" class="form-control" name="email-inner-form" />
    </div>
    <div class="form-group">
        <label>密码</label>
        <input type="text" class="form-control" name="pwd-inner-form" />
    </div>
    <button type="submit" class="btn btn-primary">提交</button>
</form>

<h1>内联表单-Addon</h1>
<form class="form-inline" id="inner-form-addon">
    <div class="form-group">
        <div class="input-group">
            <div class="input-group-addon">$</div>
            <input type="text" class="form-control" name="amount" />
            <div class="input-group-addon">.00</div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">提交</button>
</form>

<h1>文件上传</h1>
<input id="txt_file" name="txt_file" type="file" class="file-loading">
<br />
<table class="table-bordered" id="onenxTable">
    <thead>
        <tr>
            <th hidden>Id</th>
            <th>FileName</th>
            <th>UploadDate</th>
            <th>Compute</th>
            <th>Download</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td hidden>@item.FileId</td>
                <td>@item.FileName</td>
                <td>@item.UploadDate</td>
                <td><button class="btn btn-primary" id="computeBtn" data-loading-text="Computing" onclick="Compute(this)">Compute</button></td>
                <td>
                    @if (item.SubrecipeGenStatus == "Success")
                    {
                        <button class="btn btn-success" id="downloadBtn" onclick="Download(this)">Download</button>
                    }
                    else
                    {
                        <button class="btn btn-success disabled" disabled id="downloadBtn">Download</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

